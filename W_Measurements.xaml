<Window x:Class="Device001.W_Measurements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device001" 
        Height="600" MinHeight="600"
        Width="1100" MinWidth="1100"
        Background="#FFE5E5E5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="300" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Grid.Column="0" 
                  Header="Данные">
            <WindowsFormsHost 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                x:Name="WinFH_Paint"
                Margin="5,5,5,5" />
        </GroupBox>
        <GroupBox Grid.Column="2" 
                  Header="Параметры">
            <Grid Margin="5,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                              HorizontalAlignment="Left" Margin="5,5,5,5"
                              FontSize="12" > Подключение</TextBlock>
                    <Button Grid.Row="0"  Grid.Column="1"
                            x:Name="B_D01"
                            Content="Настройки D01" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_D01_Click"/>
                    <Button Grid.Row="1"  Grid.Column="1"
                            x:Name="B_D02"
                            Content="Настройки D02" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_D02_Click"/>
                </Grid>
                <Grid Grid.Row="2"
                      x:Name="Gr_OptionsD02"
                      IsEnabled="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> Режим работы</TextBlock>
                    <ComboBox Grid.Row="0"  Grid.Column="1" 
                              x:Name="CB_OperatingMode"
                              IsEditable="False"
                              HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> Тип измерения</TextBlock>
                    <ComboBox Grid.Row="1"  Grid.Column="1" 
                              x:Name="CB_TypeMeasurement"
                              HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> Шаг дискритизации</TextBlock>
                    <ComboBox Grid.Row="3"  Grid.Column="1" 
                              x:Name="CB_NumShift"
                              HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> Скорость</TextBlock>
                    <ComboBox Grid.Row="4"  Grid.Column="1" 
                              x:Name="CB_NumSpeed"
                              HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"/>
                    <Grid Grid.Row="5"
                              Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition  Width="65"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                               x:Name="T_MonochromatorStaticOrDynamic"
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12">Длина волны</TextBlock>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="TB_MonochromatorStaticOrDynamic"
                             HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"
                             TextWrapping="Wrap">
                        </TextBox>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> нм</TextBlock>
                        <Button Grid.Row="0" Grid.Column="3" 
                                x:Name="B_WaveSattic"
                                Content="->" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_WaveSattic_Click"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12">Нижняя граница</TextBlock>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="TB_MonochromatorMin"
                             HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"
                             TextWrapping="Wrap">
                        </TextBox>
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> нм</TextBlock>
                        <Button Grid.Row="1" Grid.Column="3" 
                                x:Name="B_Dynamic"
                                Content="->" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_Dynamic_Click"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12">Верхняя граница</TextBlock>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="TB_MonochromatorMax"
                             HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"
                             TextWrapping="Wrap">
                        </TextBox>
                        <TextBlock Grid.Row="2" Grid.Column="2" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> нм</TextBlock>
                    </Grid>
                </Grid>
                <Grid Grid.Row="3"                      
                      x:Name="Gr_OptionsD01"
                      IsEnabled="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition  Width="65"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12">Напряжение ФЭУ</TextBlock>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="TB_PMT"
                             HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2"
                             TextWrapping="Wrap">
                    </TextBox>
                    <TextBlock Grid.Row="0" Grid.Column="2" 
                               HorizontalAlignment="Left" Margin="5,5,5,5"
                               FontSize="12"> В </TextBlock>
                    <Button Grid.Row="0" Grid.Column="3" 
                                x:Name="B_PMT"
                                Content="->" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_PMT_Click"/>
                </Grid>
                <Button Grid.Row="5"
                        x:Name="B_Correction"
                        Content="Коррекция" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_Correction_Click"/>
                <Grid Grid.Row="6"
                      x:Name="Gr_ButtonStartOrStop"
                      IsEnabled="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            x:Name="B_Start"
                            Content="Старт" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_Start_Click"/>
                    <Button Grid.Column="1"
                            x:Name="B_Stop"
                            Content="Стоп" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2,2,2,2" Click="B_Stop_Click"/>
                </Grid>
            </Grid>
        </GroupBox>
        <GridSplitter Grid.Column="1"
                      ShowsPreview="True" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
    </Grid>
</Window>
